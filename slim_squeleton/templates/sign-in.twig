{% extends "base.twig" %}

{% block title %}Sign-in | LSCoins{% endblock %}

{% block content %}
    {% if notifs is not empty %}
        {% for notif in notifs %}
            <p data-cy="sign-in__message" class="notification">{{ notif }}</p>
        {% endfor %}
    {% endif %}
    <div class="center">
    <h1>Welcome to LSCoins</h1>
        <form data-cy="sign-in" action="{{ formAction }}" method="POST" class = "signInForm">
            <input data-cy="sign-in__email" type="text" name="email" placeholder="Enter your email"
                   value="{{ formData.email }}">
            <input data-cy="sign-in__password" type="password" name="password" placeholder="Enter your password">
            <input data-cy="sign-in__btn" type="submit" value="Sign-in" class="buttonSubmit">
        </form>


    {% if formErrors['email'] %}
        <p data-cy="sign-in__wrongEmail">{{ formErrors['email'] }}</p>
    {% endif %}
    {% if formErrors['password'] %}
        <p data-cy="sign-in__wrongPassword">{{ formErrors['password'] }}</p>
    {% endif %}
    </div>
{% endblock %}